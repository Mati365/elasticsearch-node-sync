{
  "name": "@searchpunch/elastic-reindex-stream",
  "version": "1.0.0",
  "type": "module",
  "repository": "https://github.com/Mati365/elasticsearch-reindex-stream",
  "author": "Mateusz Baginski <cziken58@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "typings": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write --config ./prettier.config.mjs --ignore-unknown",
      "eslint --fix --quiet"
    ]
  },
  "scripts": {
    "build": "npx rollup --config rollup.config.mjs",
    "lint": "npx eslint src/",
    "prepare": "npx husky install",
    "publish": "yarn build && npx changeset && npx changeset version && npx changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/types": "^17.4.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rollup": "^4.0.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
